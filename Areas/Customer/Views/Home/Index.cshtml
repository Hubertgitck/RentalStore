@{
    ViewData["Title"] = "Home page";

}

<div class="mx-auto col-md-8 pt-4 carousel slide carousel-fade" data-bs-interval="4000" data-bs-ride="carousel">
    <div class="carousel-inner home-page-carousel">
        <div class="carousel-item active ">
            <img src="/img/Model-S.png" class="d-block w-100 img-fluid" />
        </div>
        <div class="carousel-item">
            <img src="/img/Model-X.png" class="d-block w-100 img-fluid " />
        </div>
        <div class="carousel-item">
            <img src="/img/Model-3.png" class="d-block w-100 img-fluid" />
        </div>
    </div>
    <div class="row mx-auto py-5 col-4">
        <a asp-area="Customer" asp-controller="Shop" asp-action="Index"  class="btn btn-info py-3">
            <span class="h4">Check our offer now!</span>
        </a>
    </div>
</div>

<div class="container-fluid py-4 bg-secondary bg-opacity-25">
    <div class="row mx-auto">
        <div class="col-12 py-2">
            <h1 class="text-center pb-4"><strong>Why us?</strong></h1>
        </div>
        <div class="row justify-content-center align-items-center">
            <div class="col-md-3 text-center d-flex flex-column">
                <img class="img-fluid w-25 mx-auto pb-2" src="~/img/icons/variety.png" />
                <h4>Variety</h4>
                <span>
                    At our rental stores, we have all of Tesla models available!
                    No matter what your rental needs are, we've got you covered.
                </span>
            </div>
            <div class="col-md-3 text-center d-flex flex-column">
                <img class="img-fluid w-25 mx-auto pb-2" src="~/img/icons/comparison.png" />
                <h4>Affordable pricing</h4>
                <span>
                    We believe in providing affordable rental options to our customers.
                    You can rent what you need without breaking the bank.
                </span>
            </div>
            <div class="col-md-3 text-center d-flex flex-column">
                <img class="img-fluid w-25 mx-auto pb-2" src="~/img/icons/convinience.png" />
                <h4>Convenient rental process</h4>
                <span>
                    Renting from our store is easy and convenient.
                    You can browse our inventory online, reserve your rental,
                    and pick it up at any store at a time that works for you.
                </span>
            </div>
        </div>
    </div>
</div>
